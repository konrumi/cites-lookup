.App-header
  height: 240px
  background-color: #222
  text-align: center
  box-shadow: 0 0 10px rgba(0, 0, 0, .8)

  h2
    height: 40px
    margin: 0
    padding: 50px
    color: #eee
    font-size: 36px
    line-height: 28px

.App-loading
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  background-color: rgba(0, 0, 0, .6)
  z-index: 100

  span
    position: absolute
    left: 50%
    top: 50%
    display: block
    width: 200px
    height: 100px
    margin: -50px 0 0 -100px
    border-radius: 5px
    background-color: rgba(255, 255, 255, .8)
    box-shadow: 0 0 10px rgba(0, 0, 0, .2)
    line-height: 100px
    text-align: center